GARNAME = Gtk2-PodViewer
GARVERSION = 0.13
CATEGORIES = cpan
AUTHOR = GBROWN

DESCRIPTION = a Gtk2 widget for displaying Plain old Documentation (POD).
define BLURB
  Gtk2::PodViewer is a widget for rendering Perl POD documents. It is based on
  the Gtk2::TextView widget and uses Pod::Parser for manipulating POD data.
endef

DISTFILES += $(call admfiles,CSWpmgtk2podviewer,depend)

DEPENDS += cpan/Gtk2

include ../category.mk
