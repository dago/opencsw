NAME = XML-GDOME-XSLT
VERSION = 0.75
CATEGORIES = cpan
GARTYPE = v2
AUTHOR = TJMATHER

DESCRIPTION = interface to the gnome libxslt library
define BLURB
  This module is an interface to the gnome project's libxslt. This is an
  extremely good XSLT engine, highly compliant and also very fast. I have
  tests showing this to be more than twice as fast as Sablotron.
endef

DISTFILES += CSWpmxmlgdomexslt.gspec CSWpmxmlgdomexslt.depend

DEPENDS += lib/libxslt lib/gdome2
DEPENDS += cpan/XML-GDOME

include gar/category.mk
