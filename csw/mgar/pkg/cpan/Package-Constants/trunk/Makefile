NAME = Package-Constants
VERSION = 0.02
CATEGORIES = cpan
AUTHOR = KANE

DESCRIPTION = List all constants declared in a package
define BLURB
  Package::Constants lists all the constants defined in a certain package.
  This can be useful for, among others, setting up an autogenerated
  @EXPORT/@EXPORT_OK for a Constants.pm file.
endef

CATALOGNAME = pm_pkgconst
PACKAGES    = CSWpmpkgconst

ARCHALL_CSWpmpkgconst = 1

LICENSE = README

include gar/category.mk

post-extract:
	@chmod o+r $(WORKSRC)/README
	@$(MAKECOOKIE)

