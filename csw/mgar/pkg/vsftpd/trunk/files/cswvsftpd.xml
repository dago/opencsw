<service_bundle type='manifest' name='CSWvsftpd:cswvsftpd'>

	<service
		name='network/cswvsftpd'
		type='service'
		version='1'>

		<single_instance />

		<instance name='default' enabled='false'>
			<dependency name='fs'
				grouping='require_all'
				restart_on='none'
				type='service'>
				<service_fmri value='svc:/system/filesystem/local' />
			</dependency>

			<dependency name='net'
				grouping='require_all'
				restart_on='none'
				type='service'>
				<service_fmri value='svc:/network/loopback' />
			</dependency>

			<dependency
				name='config-file-vsftpd'
				grouping='optional_all'
				restart_on='refresh'
				type='path'>
				<service_fmri
					value='file://localhost/opt/csw/etc/vsftpd/vsftpd.conf' />
			</dependency>

			<dependent
				name='cswvsftpd_multi-user'
				grouping='optional_all'
				restart_on='none'>
				<service_fmri
					value='svc:/milestone/multi-user' />
			</dependent>

			<exec_method
				type='method'
				name='start'
				exec='/opt/csw/sbin/vsftpd.smf_wrapper'
				timeout_seconds='-1'>
			</exec_method>

			<exec_method
				type='method'
				name='stop'
				exec=':kill'
				timeout_seconds='-1'>
			</exec_method>

		</instance>

		<template>
			<common_name>
				<loctext xml:lang='C'>
				A very secure and fast GPL'd FTP server	
				</loctext>
			</common_name>
			<documentation>
				<manpage title='vsftpd.conf' section='5M'
					manpath='/opt/csw/share/man' />
				<manpage title='vsftpd' section='8M'
					manpath='/opt/csw/share/man' />
			</documentation>
		</template>
					
	</service>

</service_bundle>
