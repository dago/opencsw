-PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
-DAEMON=@prefix@/bin/stunnel
-PIDFILE=@prefix@/var/run/stunnel/stunnel.pid
