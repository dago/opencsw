#!/bin/sh

umask 0022

BIN=gtk-update-icon-cache


echo "** Updating Icon cache"

for i in @datadir@/icons/*
do
    if [ -d "${i}" ]
    then
	/usr/bin/printf "- ${i}... "
	@bindir@/${BIN} ${i} >/dev/null 2>&1
	if [ $? -ne 0 ]
	then
	    echo "Error"
	else
	    echo "OK"
	fi
    fi
done

echo "** Done Updating Icon cache"

