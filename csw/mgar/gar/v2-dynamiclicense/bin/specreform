# specreform - Reformat gspec files to a common format.
#
# Usage: specreform < orig.gspec > new.gspec
#

# All items line up on 3x tabstop (ts=4)
$fmt_col = "16";

if (/^%/) {
    @a = split; $d = shift @a;
    $p = $fmt_col - length($d);
    $_ = $d . " "x$p . join(" ", @a);
}
