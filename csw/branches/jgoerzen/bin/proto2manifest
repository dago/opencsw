# proto2manifest - Turn a package prototype into a manifest file.
#

use strict;

my %files;
while (<>) {
    next if /^i/;
    my @F = split;
    $F[2] =~ s/^.+=(.+)/$1/;
    $F[2] = "/tmp/a/$F[2]" unless $F[2] =~ m#\$basedir#;
    $F[2] =~ s#\$basedir#/tmp/a#;
    $F[2] =~ s#//#/#g;
    $files{$F[2]}++;
}

print foreach (sort keys %files);

