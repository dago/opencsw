#!/bin/perl -w
#
# $Id:$
# $URL:$
#
# qdepend - Quick depend formatter for use with installed
#           packages.
#

use strict;

@ARGV or die "Usage: $0 [P|I|R] <pkg> ... <pkgN>\n";

my $DEPTYPE = "P";
   $DEPTYPE = shift @ARGV if $ARGV[0] =~ /P|I|R/;

foreach my $pkg (@ARGV) {
    my ($pinfo) = `pkginfo -x $pkg 2>&1`;
    if (($? >> 8) != 0) {
        print STDERR $pinfo;
        next;
    }
    $pinfo =~ s/\s{2,}/ /g;
    chomp($pinfo);
    print "$DEPTYPE $pinfo\n";
}
