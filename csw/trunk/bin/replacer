#!/bin/bash

ROOTDIR=${1:-'.'}

for file in `find $ROOTDIR -type f | xargs grep -l $ROOTDIR`
do
    if [ ! -z "`file $file | egrep 'ELF|ar archive'`" ] ||
       [ ! -z "`echo $file | egrep '.bak'`" ]; then
        continue
    fi
    /bin/perl -i -plne "
        s#-[ILR]\s*$ROOTDIR\S+\s+##;
        s#$ROOTDIR/#/#;
    " $file
done
