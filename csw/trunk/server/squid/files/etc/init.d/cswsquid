#!/sbin/sh

case "$1" in
'start')
        if [ -f /opt/csw/sbin/squid -a -f /opt/csw/etc/squid.conf ]; then
        echo 'starting squid server.'
        /opt/csw/sbin/squid -D &
        fi
        ;;
'stop')
	if [ -f /opt/csw/sbin/squid -a -f /opt/csw/etc/squid.conf ]; then
	echo 'stopping squid server...'
        /opt/csw/sbin/squid -k shutdown && sleep 15
        exit 0
        ;;

*)
        echo "Usage: $0 { start | stop }"
        exit 1
        ;;
esac
