#!/bin/sh
PATH=/usr/bin
export PATH

if /usr/bin/grep "^${BASEDIR}/opt/csw/bin/bash$" ${BASEDIR}/etc/shells 2> /dev/null > /dev/null; then
	/usr/bin/perl -i -pwe '$_ = "" if /\/opt\/csw\/bin\/bash$/' ${BASEDIR}/etc/shells
	echo "REMOVED ${BASEDIR}/opt/csw/bin/bash from ${BASEDIR}/etc/shells."
else
	echo "${BASEDIR}/etc/shells is UNCHANGED because entry ${BASEDIR}/opt/csw/bin/bash was already wiped."
fi
